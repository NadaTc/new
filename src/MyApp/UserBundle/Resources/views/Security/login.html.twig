{% trans_default_domain 'FOSUserBundle' %}
{% extends "MyAppUserBundle::InscriAdmin.html.twig" %}

{% block formulaire %}


    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <form class="form-login" action="{{ path("fos_user_security_check") }}" method="post" class="form-signin">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
        <div class="login-container">
            <h2 class="form-login-heading">Se Connecter maintenant</h2>
            <br>

            <form>
                <div class="login-wrap">
                <input type="text" autofocus class="form-control" placeholder="Nom d'utilisateur"
                       id="username" name="_username" value="{{ last_username }}" required="required" /> <br>



                <input type="password" class="form-control" placeholder="Mot de passe"
                       id="password" name="_password" required="required" /> <br>

                    <label class="checkbox">
                                <span class="pull-right">
                                    <a data-toggle="modal" href="{{ path('fos_user_resetting_request') }}"> mot de passe oublié?</a>

                                </span>
                    </label>

               <!-- <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label> -->

                    <button class="btn btn-theme btn-block" href="index.html" type="submit" id="_submit" name="_submit" value="Se connecter"><i class="fa fa-lock"></i> Se Connecter</button>
                    <hr>
                    <div class="login-social-link centered">
                        <p>Se connecter avec les réseaux sociaux </p>
                        <button class="btn btn-facebook" type="submit"><i class="fa fa-facebook"></i> Facebook</button>
                        <button class="btn btn-twitter" type="submit"><i class="fa fa-twitter"></i> Twitter</button>
                    </div>
                    <div class="registration">
                        Vous n'avez pas encore un compte?<br/>
                        <a class="" href="{{ path('fos_user_registration_register') }}">
                            Créer un compte
                        </a>
                    </div>
                </div>

            </form>


        </div>
    </form>
{% endblock formulaire %}